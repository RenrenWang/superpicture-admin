    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
    
  },
  "include": [
    "src",
    "globals.d.ts",
    ".eslintrc.js",
    ".prettierrc.js",
  ],
  "exclude": [
    "node_modules",
    "*.js",
    "*.json"
  ]
