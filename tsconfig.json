{

  "compilerOptions": {
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
    },
    "strict": false,
    "allowJs": true,
    "lib": ["es2015", "dom", "es5", "es2016", "es2017"],
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": ".",
    "sourceMap": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src",
    "globals.d.ts",
  ],
  "exclude": [
    "node_modules",
    "*.js",
    "*.json"
  ]
}