{

  "compilerOptions": {
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
    },
    "allowJs": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": ".",
    "sourceMap": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "lib": ["esnext", "dom"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": [
    "src",
    "globals.d.ts",
    ".eslintrc.js",
    ".prettierrc.js",
  ],
  "exclude": [
    "node_modules",
    "*.js",
    "*.json"
  ]
}